@page
@using System.Globalization;
@using MartinCostello.AppleFitnessWorkoutMapper.Pages;
@model IndexModel
@{
    var today = DateTimeOffset.UtcNow.Date;
    string startDate = today.AddDays(-28).ToString("yyyy-MM-dd", CultureInfo.InvariantCulture);
    string endDate = today.ToString("yyyy-MM-dd", CultureInfo.InvariantCulture);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" integrity="sha256-QS7dIAjl99/EqGuGTcyjlvdpkwjskqvvdiPKFRv3jWY=" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" integrity="sha256-O2vM7yYY3KvcJBl9KlWgcWIDi2Gw+oW39+WceHpZMeA=" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" integrity="sha512-mSYUmp1HYZDFaVKK//63EcZq4iFWFjxSL+Z3T/aCt4IO9Cejm03q3NKKYN6pFQzY0SBOr8h+eCIAZHPXcpZaNw==" crossorigin="anonymous">
    <link rel="stylesheet" href="~/static/css/styles.css">
    <meta name="description" content="Visualise multiple journeys from Apple Fitness on a map">
    <meta name="author" content="Martin Costello">
    <title>Apple Fitness Workout Mapper</title>
</head>
<body>
    <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="https://github.com/martincostello/apple-fitness-workout-mapper" rel="nofollow" target="_blank">
            <img src="~/static/images/apple.svg" class="d-inline-block align-top" width="30" height="30" aria-hidden="true" />
            Apple Fitness Workout Mapper
        </a>
        <form class="form-inline ml-auto">
            <input type="checkbox"
                   id="show-polygon"
                   data-toggle="toggle"
                   data-off="Polygon"
                   data-offstyle="secondary"
                   data-on="Polygon"
                   data-onstyle="primary"
                   data-size="sm">
            <div class="ml-1 mr-1"></div>
            <input type="checkbox"
                   id="unit-of-distance"
                   data-toggle="toggle"
                   data-off="Kilometres"
                   data-offstyle="secondary"
                   data-on="Miles"
                   data-onstyle="primary"
                   data-size="sm">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link lead ml-2 mr-2 text-white" href="https://github.com/martincostello/apple-fitness-workout-mapper/blob/main/docs/help.md#help" rel="nofollow" target="_blank">
                        <i class="bi-question-circle" aria-hidden="true"></i> Help
                    </a>
                </li>
            </ul>
        </form>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1">
                        <span>Your Workouts <span id="track-list-count"></span></span>
                        <span class="center-block loader" aria-label="Loading..." id="tracks-loader"></span>
                    </h6>
                    <div class="d-none" id="import-container">
                        <hr />
                        <p class="font-weight-bold ml-2">
                            No workout data has been imported.
                        </p>
                        <div class="btn-group ml-2 mr-2" role="group">
                            <button type="button" class="btn btn-primary" id="import" disabled>
                                Import workouts
                                <i class="bi-upload" aria-hidden="true"></i>
                            </button>
                        </div>
                        <div class="d-none m-2 progress" id="import-loader">
                            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                <span>Importing - this make take a few minutes<span class="ellipsis" aria-hidden="true"></span></span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="sidebar-controls ml-2 mr-2">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend" aria-hidden="true">
                                <span class="input-group-text">
                                    <i class="bi-calendar-event" aria-hidden="true"></i>
                                </span>
                            </div>
                            <input type="text" autocomplete="off" class="form-control calendar" placeholder="Start date" value="@startDate" aria-label="Start date" id="not-before" disabled>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend" aria-hidden="true">
                                <span class="input-group-text">
                                    <i class="bi-calendar-event" aria-hidden="true"></i>
                                </span>
                            </div>
                            <input type="text" autocomplete="off" class="form-control calendar" placeholder="End date" value="@endDate" aria-label="End date" id="not-after" disabled>
                        </div>
                        <div class="input-group mb-3">
                            <div class="btn-toolbar" role="toolbar">
                                <div class="btn-group mr-2" role="group">
                                    <button type="button" class="btn btn-primary" id="filter" disabled>
                                        Filter
                                        <i class="bi-filter" aria-hidden="true"></i>
                                    </button>
                                </div>
                                <div class="btn-group mr-2" role="group">
                                    <button type="button" class="btn btn-secondary" id="show-all" disabled>Show all</button>
                                </div>
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-secondary" id="hide-all" disabled>Hide all</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <ul class="list-group flex-column mb-2" id="track-list">
                        <li class="list-group-item d-none track-item" id="track-item-template">
                            <a class="ml-1 nav-link" href="#" role="button" aria-expanded="false">
                                <i class="bi-geo" aria-hidden="true"></i>
                            </a>
                            <div class="collapse" id="">
                                <div class="card card-body">
                                    <ul class="track-item-metadata">
                                        <li>Started: <span data-js-start></span></li>
                                        <li>Ended: <span data-js-end></span></li>
                                        <li>Duration: <span data-js-duration></span></li>
                                        <li>Distance: <span data-js-distance></span></li>
                                        <li>Average Pace: <span data-js-pace></span></li>
                                    </ul>
                                    <div class="mt-2">
                                        <button type="button" class="btn btn-secondary btn-sm float-right track-item-visibility" data-js-visible>Hide</button>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        Map
                        <i class="bi-map" aria-hidden="true"></i>
                    </h1>
                </div>
                @if (string.IsNullOrEmpty(Model.GoogleMapsApiKey))
                {
                    <div class="alert alert-warning" role="alert">
                        <p class="lead">
                            No Google Maps API key is configured <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                        </p>
                        <p>
                            To generate an API key follow the instructions
                            <a href="https://developers.google.com/maps/gmp-get-started#quickstart" rel="nofollow" target="_blank">here</a>.
                            <i class="bi bi-box-arrow-up-right" aria-hidden="true"></i>
                        </p>
                        <p>
                            Once you have generated an API key, add it to the <code>@(nameof(Model.GoogleMapsApiKey))</code>
                            setting in the <code>appsettings.json</code> file in the directory containing this application&#39;s
                            files, restart the application and then reload this page.
                        </p>
                    </div>
                }
                <div class="alert alert-primary d-none" role="alert" id="total-distance-container">
                    You have travelled <span js-data-total-distance></span> <i class="bi bi-stars text-warning" aria-hidden="true"></i> &mdash;
                    that&#39;s saving <span js-data-emissions></span>kgs of CO<sub>2</sub> compared to driving. <i class="bi bi-tree-fill text-success"></i>
                </div>
                <div id="map"></div>
                <footer class="mt-2 text-muted">
                    Designed with <i class="bi bi-heart-fill" aria-label="love"></i> by <a href="https://martincostello.com/home/about/" rel="nofollow" target="_blank">Martin Costello</a>, &copy; @DateTimeOffset.UtcNow.Year |
                    <i class="bi bi-github" aria-hidden="true"></i> <a href="https://github.com/martincostello" rel="nofollow" target="_blank">GitHub</a> |
                    <i class="bi bi-twitter" aria-hidden="true"></i> <a href="https://twitter.com/martin_costello" rel="nofollow" target="_blank">Twitter</a>
                </footer>
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js" integrity="sha256-p6I+tuAqpKQhe7ldkP1yo/Du0QRYjm1O3reSKIiS4AM=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha512-T/tUfKSV1bihCnd+MxKD0Hm1uBBroVYBOYSk1knyvQ9VyZJpc/ALb4P0r6ubwVPSGB2GvjeoMAJJImBG12TiaQ==" crossorigin="anonymous"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=@(Model.GoogleMapsApiKey)&libraries=geometry"></script>
    <script src="~/static/js/main.js"></script>
    <script>
        $('.calendar').datepicker({
            autoclose: true,
            clearBtn: true,
            endDate: '0d',
            format: 'yyyy-mm-dd',
            todayBtn: 'linked',
            todayHighlight: true,
            weekStart: 1
        });
    </script>
</body>
</html>
