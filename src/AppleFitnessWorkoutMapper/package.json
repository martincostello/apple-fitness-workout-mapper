{
  "name": "applefitnessworkoutmapper",
  "private": true,
  "type": "module",
  "version": "1.4.0",
  "description": "Visualise multiple journeys from Apple Fitness on a map",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint && npm test",
    "compile": "webpack",
    "format": "prettier --write scripts/**/*.ts",
    "format-check": "prettier --check scripts/**/*.ts",
    "lint": "eslint scripts",
    "test": "jest",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/apple-fitness-workout-mapper.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "7.27.7",
    "@babel/preset-env": "7.27.2",
    "@googlemaps/js-api-loader": "1.16.10",
    "@stylistic/eslint-plugin": "5.0.0",
    "@types/google.maps": "3.58.1",
    "@typescript-eslint/eslint-plugin": "8.35.0",
    "@typescript-eslint/parser": "8.35.0",
    "eslint": "9.29.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-jest": "29.0.1",
    "globals": "16.2.0",
    "jest": "30.0.3",
    "moment": "2.30.1",
    "prettier": "3.6.2",
    "ts-jest": "29.4.0",
    "ts-loader": "9.5.2",
    "tsify": "5.0.4",
    "typescript": "5.8.3",
    "webpack": "5.99.9",
    "webpack-cli": "6.0.1"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "reporters": [
      "default",
      "github-actions"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  }
}
